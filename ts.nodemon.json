{
  "watch": ["src"],
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "express:application,request,app:*",
    "PORT": "8000"
  },
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "ext": "js,json,ts",
  "verbose": true
}
