{
  "watch": ["src"],
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist",
    ".vscode"
  ],
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "express:application,request,app:*",
    "PORT": "8080"
  },
  "exec": "ts-node ./src/index.ts",
  "ext": "js,json,ts",
  "verbose": true
}
